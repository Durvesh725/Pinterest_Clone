<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
  <div class="cards flex flex-wrap gap-10">
    <% if (Array.isArray(posts) && posts.length > 0) { %> <%
    posts.forEach((element) => { %>
    <div class="card w-32">
      <div class="w-full h-40 rounded-lg overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="/images/uploads/<%= element.image %>"
          alt="User uploaded image"
        />
      </div>
      <h5 class="mt-2 text-sm"><%= element.title %></h5>
    </div>
    <% }); %> <% } else { %>
    <div class="w-full text-center">
      <p class="text-gray-400">No posts available.</p>
    </div>
    <% } %>
  </div>
</div>

<% include ./partials/footer.ejs %>
