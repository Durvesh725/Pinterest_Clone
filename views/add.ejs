<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white relative">
  <!-- Form Section -->
  <h1 class="text-2xl font-semibold">Create a New Post</h1>
  <hr class="opacity-10 mt-3" />
  <form action="/createpost" method="post" enctype="multipart/form-data">
    <input
      class="block w-1/3 px-3 py-2 rounded-md mt-2"
      type="file"
      name="postImage"
      required
    />
    <input
      class="block w-1/3 px-3 py-2 text-black border-2 rounded-md mt-2"
      type="text"
      placeholder="Title"
      name="title"
      required
    />
    <textarea
      class="block w-1/3 px-3 py-2 text-black border-2 rounded-md mt-2"
      placeholder="Description"
      name="description"
    ></textarea>
    <input
      class="block w-1/3 px-3 py-2 text-white bg-red-700 rounded-md mt-2 cursor-pointer"
      type="submit"
      value="Create Post"
    />
  </form>

  <% include ./partials/footer.ejs %>
</div>
